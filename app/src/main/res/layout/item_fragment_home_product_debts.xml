<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:id="@+id/debts"
              android:layout_width="match_parent"
              android:layout_height="155dp"
              android:layout_marginTop="7dp"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/debts_product_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/recommend_icon"/>

        <TextView
            android:id="@+id/debts_product_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/debts_product_title_iv"
            android:layout_toLeftOf="@+id/debts_li_ji_tou_biao_btn"
            android:singleLine="true"
            android:text="小伍吃饭了没"
            android:textColor="@color/xiao_black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/debts_li_ji_tou_biao_btn"
            android:layout_width="56dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_btn_buy_product"
            android:gravity="center"
            android:text="立即投标"
            android:textColor="@drawable/select_text_buy_product"
            android:textSize="10sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/firstpagerline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">


            <com.mingjie.jf.view.progressview.ArcProgressView
                android:id="@+id/debts_av_profit"
                android:layout_width="77dp"
                android:layout_height="66dp"
                custom:arc_angle="270"
                custom:arc_bottom_text=""
                custom:arc_bottom_text_size="0sp"
                custom:arc_custom_text="100"
                custom:arc_finished_color="@color/color_red_light"
                custom:arc_max="100"
                custom:arc_middle_text="年化收益率"
                custom:arc_middle_text_size="10sp"
                custom:arc_progress="60"
                custom:arc_suffix_text_padding="2dp"
                custom:arc_text_color="@color/color_red_light"
                custom:arc_text_size="23sp"
                custom:arc_unfinished_color="@color/color_public_background"
                custom:arc_is_show_custom_text="true"
                />

            <TextView
                android:id="@+id/tv_shengyu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red_light"
                android:text="剩余120000元"
                android:textSize="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/firstpagerline"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/debts_tv_loan_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68,693,000.00"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="9sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="借款总额"
                android:textColor="@color/color_black_light"
                android:textSize="9sp"/>

            <TextView
                android:id="@+id/debts_tv_time_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12月/等额本息"
                android:textColor="@color/color_black_medium_light"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="期限/还款方式"
                android:textColor="@color/color_black_light"
                android:textSize="9sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>