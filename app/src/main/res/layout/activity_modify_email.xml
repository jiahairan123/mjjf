<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/public_title_blue"/>

    <TextView
        android:id="@+id/tv_chongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="身份证信息验证通过，请输入你的邮箱地址，我们将会向该邮箱发送验证链接，请注意查收"
        android:textColor="#959595" />

    <RelativeLayout
        android:layout_width="882px"
        android:layout_height="156px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y200"
        android:background="@drawable/common_menu_item_bg">

        <ImageView
            android:id="@+id/user"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/email"/>
        <!--输入用户名-->
        <EditText
            android:id="@+id/et_input_modify_password"
            android:layout_width="530px"
            android:layout_height="156px"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/user"
            android:background="@null"
            android:hint="请输入邮箱"
            android:maxLength="30"
            android:textColorHint="#aaaaaa"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="882px"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorline"/>


    <com.mingjie.jf.view.MateralButton
        android:id="@+id/bind_button"
        android:layout_width="882px"
        android:layout_height="156px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y150"
        android:background="@drawable/corners_recharge_sure"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>
