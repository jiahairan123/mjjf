<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y108"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:id="@+id/creditor_loan_info_iv"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y72"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/recommend" />

        <Button
            android:id="@+id/buy_btn"
            android:layout_width="@dimen/x164"
            android:layout_height="@dimen/y70"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_btn_purchase"
            android:gravity="center"
            android:text="转让"
            android:textColor="@drawable/select_text_buy_product"
            android:textSize="@dimen/y32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/buy_btn"
            android:layout_toRightOf="@id/creditor_loan_info_iv"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:singleLine="true"
            android:text="担保标担保标担保担保标担保标担保标 吃饭没绿色地方"
            android:textColor="@color/color_black_dark"
            android:textSize="@dimen/y38" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/color_public_division" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120,000.00"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y44"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y26" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转标金额"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/x3"
                android:layout_height="@dimen/y82"
                android:background="@color/color_public_division" />


            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00%"
                    android:textColor="@color/color_black_dark"
                    android:textSize="@dimen/y44"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期净收益"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/color_public_division" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120,000.00"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y44"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y26" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收利息"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/x3"
                android:layout_height="@dimen/y82"
                android:background="@color/color_public_division" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y44"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个月"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y26" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期限"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>