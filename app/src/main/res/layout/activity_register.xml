<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/public_title_blue"/>

        <RelativeLayout
            android:layout_width="882px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y56"
            android:background="@drawable/common_menu_item_bg">

            <ImageView
                android:id="@+id/user"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/username"/>
            <!--输入用户名-->
            <EditText
                android:id="@+id/edt_user_register_name"
                android:layout_width="530px"
                android:layout_height="156px"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/user"
                android:background="@null"
                android:hint="输入用户名"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="#aaaaaa"
                android:textSize="40px"
                />

            <ImageView
                android:id="@+id/clean_name"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/clean1"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"/>

        <RelativeLayout
            android:layout_width="882px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_menu_item_bg">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/telephone"/>
            <!--输入密码-->
            <EditText
                android:id="@+id/register_input_resetpass_pass_affirm"
                android:layout_width="530px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/phone"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="phone"
                android:maxLength="13"
                android:singleLine="true"
                android:textColorHint="#aaaaaa"
                android:textSize="40px"/>

            <ImageView
                android:id="@+id/clean_phone"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/clean1"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"/>

        <RelativeLayout
            android:layout_width="882px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_menu_item_bg">

            <ImageView
                android:id="@+id/pswd"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/pswd"/>
            <!--输入密码-->
            <EditText
                android:id="@+id/edt_user_register_password"
                android:layout_width="530px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/pswd"
                android:background="@null"
                android:hint="输入登录密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="#aaaaaa"
                android:textSize="40px"/>

            <ImageView
                android:id="@+id/re_visiable"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/close_visiable"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"/>

        <RelativeLayout
            android:layout_width="@dimen/x882"
            android:layout_height="@dimen/y156"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_menu_item_bg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pswd2"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/pswd2"/>
            <!--输入密码-->
            <EditText
                android:id="@+id/input_register_affimPassword"
                android:layout_width="@dimen/x530"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/pswd2"
                android:background="@null"
                android:hint="确认密码"
                android:textColorHint="#aaaaaa"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/re_visiable1"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/close_visiable"/>

        </RelativeLayout>

        <View
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="882px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_menu_item_bg">

            <ImageView
                android:id="@+id/register_check"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/check"/>
            <!--输入密码-->
            <EditText
                android:id="@+id/input_resetpass_verifycode"
                android:layout_width="460px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/register_check"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLength="8"
                android:singleLine="true"
                android:textColorHint="#aaaaaa"
                android:textSize="40px"/>

            <ImageView
                android:id="@+id/res_imverificationcode"
                android:layout_width="280px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/code_err"
                />
        </RelativeLayout>

        <View
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"/>

        <RelativeLayout
            android:layout_width="882px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_menu_item_bg">

            <ImageView
                android:id="@+id/check"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/messager"/>
            <!--输入密码-->
            <EditText
                android:id="@+id/input_register_verifycode"
                android:layout_width="460px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/check"
                android:background="@null"
                android:hint="短信验证码"
                android:maxLength="8"
                android:singleLine="true"
                android:textColorHint="#aaaaaa"
                android:textSize="40px"/>

            <com.mingjie.jf.view.MateralButton
                android:id="@+id/verificationcode"
                android:layout_width="280px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/user_login_edtext"
                android:text="@string/register_tv13"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <View
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"/>

        <!--推荐人-->
        <LinearLayout
            android:id="@+id/linear_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x180"
                android:text="@string/register_tv14"
                android:textColor="#626262"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_recommend"
                android:layout_width="20dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/up"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_recommend"
            android:layout_width="882px"
            android:layout_height="156px"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            >

            <!--<ImageView-->
            <!--android:id="@+id/id"-->
            <!--android:layout_width="@dimen/x80"-->
            <!--android:layout_height="@dimen/y80"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="@dimen/x30"-->
            <!--android:src="@mipmap/id" />-->
            <ImageView
                android:id="@+id/id"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/telephone"/>
            <!--输入用户名-->
            <EditText
                android:id="@+id/recommen_id"
                android:layout_width="882px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/id"
                android:background="@null"
                android:hint="输入推荐人邀请码"
                android:inputType="phone"
                android:maxLength="32"
                android:singleLine="true"
                android:textColorHint="#aaaaaa"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/clean_recommend_ph"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/clean1"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="882px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorline"
            android:visibility="gone"
            />

        <!--勾选协议-->
        <include
            layout="@layout/register_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_login"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginTop="@dimen/y80"

            />

        <com.mingjie.jf.view.MateralButton
            android:id="@+id/btn_login"
            android:layout_width="746px"
            android:layout_height="116px"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/user_login_edtext"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="43px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/login_backgrouding"
            android:visibility="visible">

        </LinearLayout>
    </LinearLayout>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/view_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/btn_keyboard_key"
        android:keyTextColor="@color/white"
        android:visibility="gone"/>
</RelativeLayout>

