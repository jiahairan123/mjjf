<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebe8e8"
    android:orientation="vertical">

    <include layout="@layout/public_title_blue" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativerevest"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:id="@+id/my_pain"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/phone" />

                <TextView
                    android:id="@+id/tv_service_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/my_pain"
                    android:gravity="center"
                    android:text="客服热线:"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />

                <TextView
                    android:id="@+id/tv_service_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/tv_service_line"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="400-***-5859"
                    android:textColor="@color/color_black_medium_light"
                    android:textColorLink="@color/text_blue"
                    android:textSize="46px" />

                <ImageView
                    android:id="@+id/userinfo_iv_invest_arrow1"
                    android:layout_width="@dimen/x52"
                    android:layout_height="@dimen/y52"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:src="@mipmap/nextpage"
                    android:visibility="invisible" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_util"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/phone" />

                <TextView
                    android:id="@+id/tv_jubaodianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/iv_util"
                    android:gravity="center"
                    android:text="举报电话:"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />

                <TextView
                    android:id="@+id/jubao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/tv_jubaodianhua"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="400-***-5859"
                    android:textColor="@color/color_red_light"
                    android:textColorLink="@color/color_red_light"
                    android:textSize="46px" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/told"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:id="@+id/iv_equiteable_assignment"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/told" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/iv_equiteable_assignment"
                    android:gravity="center"
                    android:text="公告列表"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />


                <ImageView
                    android:id="@+id/userinfo_iv_equiteable_assignment_arrow"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:src="@mipmap/nextpage" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <RelativeLayout
                android:id="@+id/suggestion"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:id="@+id/iv_userinfo_recharge"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/suggestion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/iv_userinfo_recharge"
                    android:gravity="center"
                    android:text="投诉/建议"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />


                <ImageView
                    android:id="@+id/userinfo_iv_invest_arrow"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:src="@mipmap/nextpage" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <RelativeLayout
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:id="@+id/iv_userinfo_withdrawls"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/iv_userinfo_withdrawls"
                    android:gravity="center"
                    android:text="服务条款"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />


                <ImageView
                    android:id="@+id/userinfo_iv_invest_arrow2"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:src="@mipmap/nextpage" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <RelativeLayout
                android:id="@+id/check_version"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:id="@+id/iv_check_version"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/check_version" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/iv_check_version"
                    android:gravity="center"
                    android:text="检查更新"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x150"
                    android:layout_toLeftOf="@+id/iv_userinfo_electronic_bill_arrow"
                    android:gravity="center"
                    android:text="v3.0"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />

                <ImageView
                    android:id="@+id/iv_userinfo_electronic_bill_arrow"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:src="@mipmap/nextpage" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <RelativeLayout
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@drawable/common_menu_item_bg">

                <ImageView
                    android:id="@+id/iv_userinfo_electronic_bill"
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x34"
                    android:src="@mipmap/version" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_toRightOf="@+id/iv_userinfo_electronic_bill"
                    android:gravity="center"
                    android:text="关于版本"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="46px" />


                <ImageView
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:src="@mipmap/nextpage" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#F0F1F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"></LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
