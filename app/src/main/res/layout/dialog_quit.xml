<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/point"
            android:layout_width="@dimen/x820"
            android:layout_height="@dimen/y400">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_red_light"
                    android:textSize="@dimen/y58"
                    android:textStyle="bold"
                    android:text="温馨提示" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_black_medium_light"
                    android:textSize="@dimen/y44"
                    android:text="请问你现在要退出当前的账号吗？" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/x820"
            android:layout_height="4px"
            android:background="@color/color_public_division" />

        <RelativeLayout
            android:id="@+id/choose"
            android:layout_width="@dimen/x820"
            android:layout_height="@dimen/y136">

            <LinearLayout
                android:layout_width="@dimen/x1044"
                android:layout_height="@dimen/y156"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.mingjie.jf.view.MateralButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="取消"
                        android:textColor="@color/color_black_dark"
                        android:background="@drawable/button_back_selecter"
                        android:textSize="@dimen/y48" />

                </LinearLayout>

                <View
                    android:layout_width="4px"
                    android:layout_height="@dimen/y136"
                    android:background="@color/color_public_division" />


                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.mingjie.jf.view.MateralButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="确认"
                        android:background="@drawable/button_back_selecter"
                        android:textColor="@color/color_black_dark"
                        android:textSize="@dimen/y48" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>