<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/charge_coupon_bg_bg"
    android:orientation="vertical">
    <com.mingjie.jf.view.TitleView
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/getcoupon_head_et"
            android:layout_width="246dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/shape_login_edtext"
            android:gravity="center"
            android:hint=" 请 输 入 您 的 兑 换 码 "
            android:textColorHint="#aaaaaa"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/phone_rl_chargecoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:phoneNumber="true"
            android:maxLength="11"
            android:id="@+id/getcoupon_head_phone"
            android:layout_width="246dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_login_edtext"
            android:gravity="center"
            android:hint=" 请 输 入 您 的 手 机 号 "
            android:textColorHint="#aaaaaa"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/getcoupon_head_btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="35dp"
            android:background="@mipmap/charge_coupon_button"
            android:text="确认" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="38dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text=" 兑换说明："
            android:textColor="#314369"
            android:textSize="14sp" />

        <TextView
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1、通过活动或其他途径获取兑换码（现金券、加息券等），在此兑换；"
            android:textColor="#7f7f7f" />

        <TextView
            android:lineSpacingExtra="5dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2、兑换后，“现金券”/“加息券”及时到账，请进入“我的账户”-“我的卡券”查询，未使用过期，视作自动放弃；"
            android:textColor="#7f7f7f" />

        <TextView
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="3、如有问题，请致电全国热线：400-807-6777；"
            android:textColor="#7f7f7f" />

        <TextView
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="4、在法律允许的范围内，本页面最终解释权归铭捷金服所有。"
            android:textColor="#7f7f7f" />




    </LinearLayout>
</LinearLayout>