<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--借款信息-->
    <include layout="@layout/public_title_blue"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/loadinfo_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/left_menu_text"
        app:pstsIndicatorColor="@color/colorPrimaryDark"
        app:pstsIndicatorHeight="4dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_loadinfo"
        android:background="#F0F1F5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>