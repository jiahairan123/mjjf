<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_splash_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash2"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="220px"
            android:src="@mipmap/ic_logo_h"/>

        <Button
            android:id="@+id/splsh_denglu"
            android:layout_width="match_parent"
            android:layout_height="126px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/select_btn_buy_product"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="46px"/>

        <Button
            android:id="@+id/splsh_zhuce"
            android:layout_width="match_parent"
            android:layout_height="126px"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="58px"
            android:background="@drawable/select_btn_buy_product"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="46px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px"
        android:text="@string/copyright"
        android:textSize="28px"/>

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_info"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="跳过"
        android:textColor="@drawable/select_text_buy_product"
        android:textSize="40px"/>

</RelativeLayout>
