    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!--输入真实姓名-->
        <com.mingjie.jf.view.LimitEditText
            android:id="@+id/deposite_realname"
            android:layout_width="918px"
            android:layout_height="126px"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:background="@drawable/select_btn_buy_product_two"
            android:hint="真实姓名"
            android:lines="1"
            android:maxLength="12"
            android:paddingLeft="40px"
            android:textColor="@color/white"
            android:textColorHint="@color/ce"
            android:textSize="46px"/>

        <EditText
            android:id="@+id/deposite_idname"
            android:layout_width="918px"
            android:layout_height="130px"
            android:layout_below="@id/deposite_realname"
            android:layout_gravity="center"
            android:layout_marginBottom="120px"
            android:layout_marginTop="58px"
            android:background="@drawable/select_btn_buy_product_two"
            android:hint="身份证"
            android:lines="1"
            android:maxLength="18"
            android:paddingLeft="40px"
            android:textColor="@color/white"
            android:textColorHint="@color/ce"
            android:textSize="40px"
            />

        <RelativeLayout
            android:id="@+id/rl_adv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_deposite"
            android:layout_gravity="center"
            android:layout_marginTop="80px">

            <ImageView
                android:id="@+id/im_deposite"
                android:layout_width="46px"
                android:layout_height="46px"
                android:src="@mipmap/advance"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_deposite_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/im_deposite"
                android:text="@string/open_deposit_advantage"
                android:textColor="@color/white"
                android:textSize="34px"
                android:visibility="visible"
                />
        </RelativeLayout>

        <com.mingjie.jf.view.MateralButton
            android:id="@+id/btn_deposite"
            android:layout_width="918px"
            android:layout_height="130px"
            android:layout_below="@+id/deposite_idname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:background="@drawable/button_selector"
            android:text="@string/open_deposit_account"
            android:textColor="@color/color_black_medium_light"
            android:textSize="50px"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280px"
        android:src="@mipmap/ic_logo_h"
        />

